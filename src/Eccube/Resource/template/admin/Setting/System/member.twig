{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['setting', 'system', 'member'] %}

{% block title %}{{'admin.setting.system.member.684'|trans}}{% endblock %}
{% block sub_title %}{{'admin.setting.system.member.685'|trans}}{% endblock %}

{% form_theme form 'Form/bootstrap_4_layout.html.twig' %}

{% block javascript %}
<script>
function changeAction(action) {
    document.form1.action = action;
}
</script>
{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-12">
                                <span class="card-title">{{'admin.setting.system.member.686'|trans}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0" id="member_list_box__body">
                        <form name="form1" id="form1" method="post" action="">
                            <table class="table table-sm" id="search_result">
                                <thead>
                                <tr>
                                    <th class="border-top-0 pt-2 pb-2 text-center" id="member_list__header_name">
                                        {{'admin.setting.system.member.687'|trans}}
                                    </th>
                                    <th class="border-top-0 pt-2 pb-2 text-center" id="member_list__header_department">
                                        {{'admin.setting.system.member.688'|trans}}
                                    </th>
                                    <th class="border-top-0 pt-2 pb-2 text-center" id="member_list__header_authority_name">
                                        {{'admin.setting.system.member.689'|trans}}
                                    </th>
                                    <th class="border-top-0 pt-2 pb-2 text-center" id="member_list__header_work_name">
                                        {{'admin.setting.system.member.690'|trans}}
                                    </th>
                                    <th class="border-top-0 pt-2 pb-2 text-center" id="member_list__header_menu_box"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for Member in Members %}
                                    <tr>
                                        <td class="align-middle text-center pl-3" id="member_list__name--{{ Member.id }}">
                                            {{ Member.name }}
                                        </td>
                                        <td class="align-middle text-center" id="member_list__department--{{ Member.id }}">
                                            {{ Member.department }}
                                        </td>
                                        <td class="align-middle text-center" id="member_list__authority_name--{{ Member.id }}">
                                            {{ Member.Authority.name }}
                                        </td>
                                        <td class="align-middle text-center" id="member_list__work_name--{{ Member.id }}">
                                            {{ Member.Work.name }}
                                        </td>
                                        <td class="align-middle text-center" id="member_list__menu_box--{{ Member.id }}">
                                            <div class="row justify-content-end">
                                                <div class="col-auto text-center">
                                                    <a class="btn btn-ec-actionIcon action-edit"
                                                       href="{{ url('admin_setting_system_member_edit', { 'id' : Member.id }) }}"
                                                       data-toggle="tooltip"
                                                       data-placement="top"
                                                       data-original-title="{{'admin.setting.system.member.691'|trans}}">
                                                        <i class="fa fa-pencil fa-lg text-secondary" aria-hidden="true"></i>
                                                    </a>
                                                </div>
                                                <div class="col-auto text-center">
                                                    <a class="btn btn-ec-actionIcon action-up {% if loop.first %} disabled {% endif %}"
                                                       href="{{ url('admin_setting_system_member_up', {id: Member.id}) }}"
                                                       data-toggle="tooltip"
                                                            {{ csrf_token_for_anchor() }}
                                                       data-method="put"
                                                       data-confirm="false"
                                                       data-placement="top"
                                                       data-original-title="{{'admin.setting.system.member.694'|trans}}">
                                                        <i class="fa fa-arrow-up fa-lg text-secondary" aria-hidden="true"></i>
                                                    </a>
                                                </div>
                                                <div class="col-auto text-center">
                                                    <a class="btn btn-ec-actionIcon action-down {% if loop.last %} disabled {% endif %}"
                                                       href="{{ url('admin_setting_system_member_down', {id: Member.id}) }}"
                                                       data-toggle="tooltip"
                                                            {{ csrf_token_for_anchor() }}
                                                       data-method="put"
                                                       data-confirm="false"
                                                       data-placement="top"
                                                       data-original-title="{{'admin.setting.system.member.695'|trans}}">
                                                        <i class="fa fa-arrow-down fa-lg text-secondary" aria-hidden="true"></i>
                                                    </a>
                                                </div>
                                                <div class="col-auto text-center">
                                                    {% if Member.id == app.user.id %}
                                                        <a class="btn btn-ec-actionIcon action-delete disabled"
                                                           data-toggle="tooltip" data-placement="top"
                                                           data-original-title="{{'admin.setting.system.member.692'|trans}}">
                                                            <i class="fa fa-close fa-lg text-secondary" aria-hidden="true"></i>
                                                        </a>
                                                    {% else %}
                                                        <a class="btn btn-ec-actionIcon action-delete"
                                                           href="{{ url('admin_setting_system_member_delete', {id: Member.id}) }}"
                                                                {{ csrf_token_for_anchor() }}
                                                           data-method="delete"
                                                           data-toggle="tooltip" data-placement="top"
                                                           data-original-title="{{'admin.setting.system.member.693'|trans}}">
                                                            <i class="fa fa-close fa-lg text-secondary" aria-hidden="true"></i>
                                                        </a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="card rounded border-0">
                    <div class="card-body p-4">
                        <div class="text-center text-muted mb-4 h5 btn-area-bottom">
                            <a href="{{ url('admin_setting_system_member_new') }}" class="btn btn-ec-regular btn-lg">
                                {{'admin.setting.system.member.696'|trans}}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}